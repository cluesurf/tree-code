{
  "name": "leaf-text",
  "icon": "view/leaf.png",
  "displayName": "LeafText",
  "description": "LeafText Syntax Highlighter",
  "version": "1.0.0",
  "license": "Apache 2.0",
  "publisher": "termsurf",
  "main": "./base.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/termsurf/leaf-text.git"
  },
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "workspaceContains:**/*.leaf"
  ],
  "contributes": {
    "iconThemes": [
      {
        "id": "leaf",
        "label": "Note",
        "path": "./view/view.json"
      }
    ],
    "configurationDefaults": {
      "[leaf]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
          "other": true,
          "comments": true,
          "strings": true
        },
        "editor.tabCompletion": "on",
        "editor.wordSeparators": " ()<>{},?/",
        "editor.bracketPairColorization.enabled": false
      }
    },
    "languages": [
      {
        "id": "leaf",
        "aliases": [
          "Note",
          "leaf"
        ],
        "extensions": [
          ".leaf"
        ],
        "configuration": "./bind.json"
      }
    ],
    "grammars": [
      {
        "language": "leaf",
        "scopeName": "source.leaf",
        "path": "./text.json"
      }
    ]
  }
}
